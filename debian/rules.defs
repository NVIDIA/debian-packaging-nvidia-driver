# If needed, set to the major part of the upstream version number.
#NVIDIA_LEGACY		 =
WATCH_VERSION		 = 304
NVIDIA_SETTINGS		 = nvidia-settings (>= $(version_major))

XORG_ABI_LIST		 = 14 13 12 11 10 8 6.0
XORG_BOUND		 = (<< 2:1.14.99)

NVIDIA_DIRNAME_X86	 = NVIDIA-Linux-x86-${NVIDIA_RELEASE}
NVIDIA_DIRNAME_X86_64	 = NVIDIA-Linux-x86_64-${NVIDIA_RELEASE}
NVIDIA_FILENAME_X86	 = ${NVIDIA_DIRNAME_X86}.run
NVIDIA_FILENAME_X86_64	 = ${NVIDIA_DIRNAME_X86_64}.run

MULTIARCH		 = yes
