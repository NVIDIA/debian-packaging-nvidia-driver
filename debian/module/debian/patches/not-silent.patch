+	$(NVQ)echo \#define NV_COMPILER \"`$(CC) -v 2>&1 | tail -n 1`\" > $@
 
 .PHONY: conftest-verbose
 conftest-verbose:
@@ -262,10 +262,10 @@ ifneq ($(KERNELRELEASE),)
 #
 
 suser-sanity-check:
