 	 echo " CONFTEST: $$SANITY_CHECK"; \
 	 if ! $(CONFTEST) $$SANITY_CHECK full_output; then \
 	 exit 1; \
@@ -301,9 +301,9 @@ ifeq ($(KERNELRELEASE),)
 
 module:
 	@echo "NVIDIA: calling KBUILD..."
